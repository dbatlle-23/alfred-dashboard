# Variables de entorno para Alfred Dashboard en Railway

# Configuración del servidor
HOST=0.0.0.0
PORT=8050
DASH_DEBUG=false

# Configuración de logging
LOG_LEVEL=INFO
CONSOLE_LOG_LEVEL=INFO
FILE_LOG_LEVEL=DEBUG

# Configuración de autenticación JWT
JWT_SECRET_KEY=your_secret_key_here_replace_in_production

# Configuración de base de datos (si usas PostgreSQL en Railway)
# DATABASE_URL será automáticamente proporcionada por Railway si añades PostgreSQL
# DATABASE_URL=postgresql://user:password@host:port/database

# Configuración de API externa
API_BASE_URL=https://your-alfred-smart-api.com
API_USERNAME=your_api_username
API_PASSWORD=your_api_password

# Configuración opcional
PYTHONUNBUFFERED=1
TZ=Europe/Madrid 